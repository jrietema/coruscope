<% home = defined?(param_2) ? param_2 : 'address' %>
<% separator = defined?(param_1) ? param_1 : 'right-open-mini' %>
<div class='breadcrumb-wrapper'>
  <ul class='breadcrumbs'>
    <% breadcrumbs(@cms_page).reverse.each_with_index do |page, index| %>
        <li><%= (index > 0) ? content_tag(:i, '', class: "icon-#{separator}") : content_tag(:i, '', class: "icon-#{home}") %>
          <%= link_to page.label, page_path(page) %>
        </li>
    <% end %>
  </ul>
</div>