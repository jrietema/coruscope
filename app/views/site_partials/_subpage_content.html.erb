<% page = (defined?(param_1) ? @cms_page.site.pages.where(id: param_1).first) : @cms_page) || @cms_page %>
<% categories = (defined?(param_2) ? param_2 : []) %>
<% subpages = (categories.empty? ? page.children : page.children.for_category(categories)).select{|p| !p.render_as_page} %>
