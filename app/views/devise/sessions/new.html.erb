<%= formatted_form_for(resource, as: resource_name, url: session_path(resource_name), type: :vertical) do |f| %>
    <h2>Coruscope Sign in</h2>
    <%= f.email_field :email, :autofocus => true, :class => 'input', :placeholder => 'E-Mail' %>
    <%= f.password_field :password, :class => 'input', :placeholder => 'Password' %>
    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me, :label => 'Remember me' %>
    <% end %>
    <%= f.submit "Sign in" %>
<% end %>
<% content_for :right_column do %>
</br></br></br></br></br></br></br></br></br>
<% if devise_mapping.rememberable? %></br><% end %>
<%= render "devise/shared/links" %>
<% end %>
