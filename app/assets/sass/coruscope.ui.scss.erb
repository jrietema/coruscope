#coruscope
  .navbar
    .brand {
        margin-right: 10%;
        .site-identity {
            position: relative;
            top: -0.15em;
            background-color: #005580; /* #0088CC; */
            color: #fff;
            font-size: 70%;
            font-family: courier;
            font-weight: bold;
            padding: 2px 5px;
      }
    }
    .nav {
        width: 60%;
    }

#content .row-fluid:nth-child(1) {
    position: relative;
    height: 38px;
    overflow: hidden;
    #content_messages {
        position: absolute;
        top: 2px;
        right: 2px;
        width: 60%;
        z-index: 0;
        text-align: right;
        a {
            z-index: 80;
        }
    }
    .nav-tabs {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 10;
        background-color: #fff;
    }
}
#content .nav-tabs a {
    color: #005580;
}
#content .nav-tabs .active a {
    color: $decoration
}

#content .row-fluid + .row-fluid {
    padding-top: 0.8em;
}

form.formatted
    .control-group
        .control-label {
    font-size: 85%;
    font-weight: bold;
    letter-spacing: 0.05em;
    margin-bottom: 0px;
}

/* Restyle content-actions (right-hand column moved into left) */
.content-actions {
    padding: 0 0.8em;
}
.content-actions > div {
    margin-top: 1em;
}
