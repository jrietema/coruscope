#coruscope
  .navbar
    .brand {
        margin-right: 10%;
        .site-identity {
            position: relative;
            top: -0.15em;
            background-color: #005580; /* #0088CC; */
            color: #fff;
            font-size: 70%;
            font-family: courier;
            font-weight: bold;
            padding: 2px 5px;
            border-radius: 0.5em;
      }
    }
    .nav {
        width: 60%;
        #cms-current-context {
            margin-left: 3%;
            margin-top: 10px;
            span {
                color: #fff !important;
                background-color: #005580;
                line-height: 0.8em;
                padding: 5px 10px;
            }
        }
    }

#coruscope
  textarea.CodeMirror {
    resize: both;
}

#coruscope .content-actions .file-uploader {
    display: none;
}

#dynamic-content
  .page-header {
    padding-bottom: 0;
    margin-bottom: 1em;
}

#content .row-fluid:nth-child(1) {
    position: relative;
    height: 38px;
    overflow: hidden;
    #content_messages {
        position: absolute;
        top: 2px;
        right: 2px;
        width: 60%;
        z-index: 0;
        text-align: right;
        a {
            z-index: 80;
        }
    }
    .nav-tabs {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 10;
        background-color: #fff;
    }
}
#content .nav-tabs a {
    color: #005580;
}
#content .nav-tabs .active a {
    color: $decoration
}

#content .row-fluid + .row-fluid {
    padding-top: 0.8em;
}

#content .left-column .tab-pane {
    min-height: 186px;
    max-height: 620px;
    padding-right: 18px;
    overflow-y: auto;
}

form.formatted
    .control-group {
    .control-label {
        font-size: 85%;
        font-weight: bold;
        letter-spacing: 0.05em;
        margin-bottom: 0px;
    }
    .files {
        margin-top: 0.3em;
    }
}

/* Restyle content-actions (right-hand column moved into left) */
.content-actions {
    padding: 0 0.8em;
}
.content-actions > div {
    margin-top: 1em;
}

.content-actions select {
    width: 100%;
}

/* Smaller Textareas */
body#coruscope {
    form#new_file .control-group textarea,
    form#edit_file .control-group textarea {
            width: 100%;
            height: 180px;
    }
}