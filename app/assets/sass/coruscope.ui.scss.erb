#coruscope
  .navbar {
    height: 40px;
    overflow-y: hidden;
    .brand {
        margin-right: 10%;
        #site_identity {
            position: relative;
            top: -0.15em;
            background-color: #005580; /* #0088CC; */
            color: #fff;
            font-size: 70%;
            font-family: courier;
            font-weight: bold;
            padding: 2px 5px;
            border-radius: 0.5em;
        }
    }
    .nav {
        width: 60%;
        float: right;
        .site-locales {
            margin-top: 5px;
        }
        .site-locales a {
            display: inline-block;
            float: left;
            padding: 5px 10px;
        }
        .site-locales a.active {
            background-color: #005580;
            color: #fff;
        }
        #cms-current-context {
            margin-left: 3%;
            margin-top: 10px;
            span {
                color: #fff !important;
                background-color: #005580;
                line-height: 0.8em;
                padding: 5px 10px;
            }
        }
    }

}
  #content {
      min-height: 610px;
  }

/* Fancytree Dialogs */
#coruscope
    .fancytree-container
        .fancytree-node {
            position: relative;
            padding-right: 34px;
            .node-actions a {
                position: relative;
                left: 0;
                top: -4px;
                opacity: 0.6;
            }
            .node-actions a:hover {
                opacity: 1;
            }
}
        img.fullsize {
            position: absolute;
            left: -26px;
            top: 2px;
            width: auto !important;
            height: auto;
            max-height: 18px;
}

.bootstrap-wysihtml5-insert-image-modal {
    padding: 0 16px;
    label {
        margin-top: 0.33em;
        > input[type='radio'] {
            margin-right: 0.5em;
            margin-top: -3px;
        }
    }
    .image_chooser {
        max-height: 240px;
        overflow-y: auto;
        > ul > li > .fancytree-lastsib {
            display: none;
        }
    }
    .image_chooser_preview {
        max-height: 240px;
        max-width: 480px;
        margin: 0 auto;
    }
    .image_orientation_select {
        max-width: 50%;
    }
}

#coruscope
    textarea.CodeMirror {
        resize: both;
}

#coruscope .content-actions .file-uploader {
    display: none;
}

#dynamic-content {
    .page-header {
        padding-bottom: 0;
        margin-bottom: 1em;
    }
}
#dynamic-overlay {
    background: transparent url('/images/dynamic-overlay.png') top left repeat;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9000;
    .ajax-spinner {
        width: 66%;
        height: 48px;
        background: #ffffff url('/images/loader_bar.png') 20px 8px no-repeat;
        padding-left: 145px;
        padding-top: 4px;
        font-style: italic;
        position: absolute;
        top: 0;
        left: 0;
    }
}

#content .row-fluid:nth-child(1) {
    position: relative;
    height: 38px;
    overflow: hidden;
    #content_messages {
        position: absolute;
        top: 2px;
        right: 2px;
        width: 40%;
        z-index: 0;
        a {
            z-index: 80;
        }
    }
    .nav-tabs {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 10;
        background-color: #fff;
    }
}
#content .nav-tabs a {
    color: #005580;
}
#content .nav-tabs .active a {
    color: $decoration
}

#content .row-fluid + .row-fluid {
    padding-top: 0.8em;
}

#content .left-column .tab-pane {
    min-height: 186px;
    max-height: 620px;
    padding-right: 18px;
    overflow-y: auto;
}

#coruscope
    .center-column .nav-tabs a,
    .left-column .nav-tabs a{
    padding: 2px 8px;
}


#coruscope
    form.formatted {
        .control-group {
            clear: both;
            .control-label {
                font-size: 85%;
                font-weight: bold;
                letter-spacing: 0.05em;
                margin-bottom: 0px;
            }
            .files {
                margin-top: 0.3em;
            }
            img.image-preview {
                width: auto;
                height: auto;
                max-width: 640px;
                max-height: 640px;
            }
            input[type='file'],
            div.files {
                float: left;
                max-width: 45%;
            }
        }
        #form-blocks
            .nav {
            width: 100%;
        }
    }

#content_messages a {
    margin-left: 1.75em;
}

#meta_pane
    form.formatted
        .control-group
            textarea {
                max-height: 160px;
}

/* Restyle content-actions (right-hand column moved into left) */
.content-actions {
    padding: 0 0.8em;
}
.content-actions > div {
    margin-top: 1em;
}

.content-actions select {
    width: 100%;
}

/* Smaller Textareas */
body#coruscope {
    form#new_file .control-group textarea,
    form#edit_file .control-group textarea {
            width: 100%;
            height: 180px;
    }
}